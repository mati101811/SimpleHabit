<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/dialog_bg"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/time_travel_meme" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:fontFamily="@font/sulphur_point"
        android:text="Cofnąłeś się w czasie"
        android:textSize="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:gravity="start"
        android:text="Według danych aplikacji została ona ostatnio uruchomiona w przyszłości.\nOznacza to, że prawdopodobnie zmieniłeś datę w telefonie aby cofnąć się do minionego dnia.\n\nJak wiemy z filmów cofanie się w czasie nie zmienia teraźniejszości. Tak samo ty nie możesz teraz zmieniać ani dodawać nowych zadań.\n\nWracaj do teraźniejszości i rób co masz robić zamiast próbować naprawić przeszłość."
        android:textSize="15dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/sulphur_point"
        android:letterSpacing="0.01"
        android:minWidth="140dp"
        android:text="OK"
        app:cornerRadius="15dp" />

</LinearLayout>